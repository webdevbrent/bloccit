<div class="row">
    <h1>Sign Up Confirmation</h1>
    <h3>Are you sure these values are correct?</h3>
    <div class="col-md-4">
        <p>Email: <%= @user.email %></p>
        <p>Username: <%= @user.name %></p>
        <div class="row">
        <div class="col-md-4">
        <%= button_to "Yes", 
                { controller: 'users', action: 'create', params: { user: user_params } }, 
                class: 'btn btn-block btn-success' %>
            <%= button_to "No", { controller: 'users', action: 'new'}, class: 'btn btn-block btn-danger', method: :get %>
        </div>
        </div>
    </div>
</div>


